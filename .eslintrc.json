{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
        "react/*": "off" ,
        "react/prop-types": "off",  // Disable prop-types check
        "no-unused-vars": "off",    // Disable unused-vars check
        "react/no-unknown-property": "off",
        "react/display-name": "off" ,
        "react-hooks/exhaustive-deps": "off",
        "react/react-in-jsx-scope": "off",
        "no-undef": "off" 
    }
}
